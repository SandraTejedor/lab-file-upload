<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Nuevo Comentario</h1>
        </div>

        <div class="col-md-6">

            <form action="/posts/new" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name-input">Comentario:</label>
                    <input name="content" type="text" class="form-control" id="name-input">
                </div>
                <div class="form-group">
                    <label for='input1'>Foto:</label>
                    <input name='picPath' type='file' id='input1'>
                </div>


                <button type="submit" class="btn btn-dark">Crear comentario</button>
                <a href="/comments" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>